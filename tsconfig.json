{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["ES2015", "dom"],
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "typeRoots" : ["node_modules/@types", "./src/types"],
        "types": ["@emotion/react/types/css-prop"],
    }
}